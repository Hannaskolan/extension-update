{
  "manifest_version": 3,
  "name": "Rensa webbdata för utvalda sidor",
  "version": "1.0.6",
  "description": "Tömmer cookies, lagring och sessionsdata på utvalda domäner (t.ex. mip.se) när man klickar på en knapp.",
  "permissions": [
    "browsingData",
    "cookies",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Rensa webbdata"
  }
}
